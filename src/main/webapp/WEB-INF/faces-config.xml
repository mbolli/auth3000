<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <application>
        <locale-config>
            <default-locale>en_US</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ch.mbolli.awt.auth3000.i18n.T</base-name>
            <var>t</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginSuccess</from-outcome>
            <to-view-id>/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user_save_success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>account_save_success</from-outcome>
            <to-view-id>/list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>